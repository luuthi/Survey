@{
    ViewBag.Title = "Giới thiệu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-sm-12 col-md-12 col-xs-12">
        <div class="account-pannel">
            <div class="account-title">
                <h2>Cập nhật tài khoản</h2>
            </div>
            <div class="account-pannel-body">
                <form action="" method="post">
                    <div class="row">
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <div class="form-group">
                                <label>Họ đệm <span color="red">*</span></label>
                                <input class="form-control" type="text" name="txtHo" id="txtHo" />
                            </div>
                            <div class="form-group">
                                <label>Tên <span color="red">*</span></label>
                                <input class="form-control" type="text" name="txtHo" id="txtHo" />
                            </div>
                            <div class="form-group">
                                <label>Tên đăng nhập<span color="red">*</span></label>
                                <input class="form-control" type="text" name="txtHo" id="txtHo" />
                            </div>
                            <div class="form-group">
                                <label>Mật khẩu <span color="red">*</span></label>
                                <input class="form-control" type="password" name="txtHo" id="txtHo" />
                            </div>
                            <div class="form-group">
                                <label>Nhập lại mật khẩu <span color="red">*</span></label>
                                <input class="form-control" type="password" name="txtHo" id="txtHo" />
                            </div>

                        </div>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <div class="form-group">
                                <label>Email <span color="red">*</span></label>
                                <input class="form-control" type="text" name="txtHo" id="txtHo" />
                            </div>
                            <div class="form-group">
                                <label>Giới tính<span color="red">*</span></label>
                                <br />
                                <input type="radio" name="gender" value="1" />Nam
                                <input type="radio" name="gender" value="0" />Nữ
                            </div>
                            <div class="form-group">
                                <label>Ngày sinh <span color="red">*</span></label>
                                <input class="form-control" type="date" name="txtHo" id="txtHo" />
                            </div>
                            <div class="form-group">
                                <label>Ảnh đại diện <span color="red">*</span></label>
                                <input type="file" id="upload" name="upload" />
                                <input class="form-control" type="hidden" name="txtHo" id="txtHo" />
                                <img src="~/Images/User_Circle.png" id="img-ava" style="max-width:200px ; border:#808080 1px solid" />
                            </div>
                        </div>
                        <div class="col-md-12 col-sm-12 col-xs-12 ">
                            <input type="button" class="btn btn-success pull-right" name="" id="" value="Lưu" />
                            <input type="button" class="btn tn-warning pull-right" name="" id="" value="Hủy" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>